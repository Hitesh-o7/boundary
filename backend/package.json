{
  "name": "boundary-insights-backend",
  "version": "1.0.0",
  "description": "Boundary Insights - IPL Data Platform Backend (Node.js, Express, TypeScript, PostgreSQL, Prisma)",
  "main": "dist/server.js",
  "scripts": {
    "dev": "bun run --watch src/server.ts",
    "build": "bun build src/server.ts --outdir dist --target node",
    "start": "bun run dist/server.js",
    "prisma:generate": "bunx prisma generate",
    "prisma:migrate": "bunx prisma migrate dev",
    "prisma:migrate:prod": "bunx prisma migrate deploy",
    "prisma:studio": "bunx prisma studio",
    "import:ipl": "bun run scripts/importIplData.ts",
    "check:tables": "bun run scripts/checkTables.ts"
  },
  "keywords": [
    "ipl",
    "cricket",
    "express",
    "typescript",
    "prisma",
    "postgresql"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.19.0",
    "helmet": "^7.0.0",
    "lucide-react": "^0.562.0",
    "morgan": "^1.10.0",
    "pg": "^8.13.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.1",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "prisma": "^6.0.0",
    "typescript": "^5.7.2"
  }
}
